# finds out, if available)
bar {
        
        position top
        font pango:MesloLGS NF 14
        #status_command i3status
	#position top
        height 27
        strip_workspace_numbers yes
        workspace_min_width 40
	tray_output none
	status_command i3blocks -c ~/.config/i3blocks/i3blocks.conf
	colors {
                background      $bg_color_bar
                statusline      $iac_bg_color
                separator       #F5F6F7
	#		   Border 	  BG     	 Text
        focused_workspace  $bg_color_bar $bg_color 	$iac_bg_color
        active_workspace   $bg_color     $bg_color_bar 	$bg_color
        inactive_workspace $bg_color_bar $bg_color_bar  $bg_color
        urgent_workspace   $bg_color_bar $urgcolor 	$bg_color
        binding_mode       $bg_color_bar $iac_bd_color 	$iac_bg_color
     }
}


