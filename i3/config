client.focused		$iac_bg_color 	$iac_bg_color 	      $textcolor	$iac_bg_color
client.unfocused 	$bg_color 	$bg_color             $iac_bg_color     $bg_color
client.focused_inactive $bg_color       $bg_color             $iac_bg_color     $iac_bg_color
client.urgent 		$urgcolor	$urgcolor	      $textcolor	$urgcolor
