# reload the configuration file
bindsym $mod+Ctrl+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -f hack -t warning -m 'Power Menu' -b 'ShutDown' 'systemctl poweroff' -b 'Restart' 'systemctl restart' -B 'Logout' 'i3-msg exit'"
bindsym $mod+Shift+c exec "i3-nagbar -f hack -t warning -m 'Control Panel' -b 'Edit Config' 'code ~/.config/i3/config' -B 'Volume Contorl' 'raiseorlaunch -c Pavucontrol -r' -B 'Appearance' 'raiseorlaunch -c Lxappearance'"


set $bback      #000000
set $fontw      #ffffff
set $border1    #333333
set $border2    #4c7899
set $border3    #2f343a
set $fontd      #2d2d2d
set $backfo     #007fa2
set $backac     #888888
set $backinac   #222222
set $backurg    #ef6769
set $indic      #00a6c9


bar {
 	position top
        status_command i3blocks -c ~/.config/i3blocks/i3blocks.conf
        tray_padding 5
        tray_output primary
        strip_workspace_numbers true
        workspace_min_width 50
        height 28
        colors{
                background $bback
                statusline $fontw
                separator  $fontw

                #                  border       backgr       text   
                focused_workspace  $border2     $backfo      $fontw
                active_workspace   $border1     $backac      $fontw
                inactive_workspace $border1     $backinac    $fontw
                urgent_workspace   $border3     $backurg     $fontd
                binding_mode       $border3     $backurg     $fontw
        }
}

#Window colours         border          backgr.         text            indicator       child_border
client.focused          $backfo         $backfo         $fontw          $indic          $backfo
client.focused_inactive $border1        #5f676a         $fontw          $indic          $backfo
client.unfocused        $border1        $backina        $fontd          #292d2e         $backina
client.urgent           $border3        $backurg        $fontw          $backurg        $backurg
client.placeholder      $backinac       $backinac       $fontw          $backinac       $backinac

client.background       $fontw

