set $mod Mod4
set $mod2 Mod1

font pango:noto sans 13

set $inner_gaps 7
set $outer_gaps 7
gaps inner $inner_gaps
gaps outer $outer_gaps
default_border pixel
default_floating_border pixel 2
popup_during_fullscreen smart
bindsym $mod+Shift+t            gaps inner current set $inner_gaps; gaps outer current set $outer_gaps 7

bindsym $mod+i                  gaps inner current plus 5
bindsym $mod+Shift+i            gaps inner current minus 5
bindsym $mod+o                  gaps outer current plus 5
bindsym $mod+Shift+o            gaps outer current minus 5

exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork

# Use pactl to adjust volume in PulseAudio.
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && pkill -RTMIN+10 i3blocks
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && pkill -RTMIN+10 i3blocks
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && pkill -RTMIN+10 i3blocks

#Brightness
bindsym XF86MonBrightnessDown   exec --no-startup-id xbacklight -dec 10 && pkill -RTMIN+13 i3blocks
bindsym XF86MonBrightnessUp     exec --no-startup-id xbacklight -inc 10 && pkill -RTMIN+13 i3blocks

floating_modifier $mod
bindsym $mod+q kill

# start rofi-menu
bindsym $mod+d exec --no-startup-id rofi -show drun -show-icons
bindsym $mod2+Tab exec --no-startup-id rofi -show window -show-icons -theme ~/.config/rofi/config_windows.rasi
bindsym $mod2+e exec --no-startup-id rofi -show file-browser -show-icons -theme ~/.config/rofi/config_files.rasi

# change focus
bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+l focus up
bindsym $mod+semicolon focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+l move up
bindsym $mod+Shift+semicolon move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+h split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+t layout stacking
bindsym $mod+g layout tabbed
bindsym $mod+y layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child

bindsym $mod+Tab workspace back_and_forth

# Workspaces
set $ws1 "1:  "
set $ws2 "2:  "
set $ws3 "3:  "
set $ws4 "4:  "
set $ws5 "5:  "
set $ws6 "6:  "
set $ws7 "7:  "
set $ws8 "8:  "
set $ws9 "9:  "
set $ws10 "10:  "
set $ws11 "11:  "
set $ws12 "12:  "
set $ws13 "13:  "
set $ws14 "14:  "
set $ws15 "15:  "
set $ws16 "16:  "

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3 ; layout tabbed
bindsym $mod+4 workspace number $ws4 ; layout tabbed
bindsym $mod+5 workspace number $ws5
bindsym $mod2+1 workspace number $ws6
bindsym $mod2+2 workspace number $ws7
bindsym $mod2+3 workspace number $ws8
bindsym $mod2+4 workspace number $ws9
bindsym $mod2+5 workspace number $ws10
bindsym $mod2+6 workspace number $ws16
bindsym $mod+6 workspace number $ws11 ; layout tabbed
bindsym $mod+7 workspace number $ws12
bindsym $mod+8 workspace number $ws13 ; layout tabbed
bindsym $mod+9 workspace number $ws14
bindsym $mod+0 workspace number $ws15

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1 ; workspace $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2 ; workspace $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3 ; workspace $ws3 ; layout tabbed
bindsym $mod+Shift+4 move container to workspace number $ws4 ; workspace $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5 ; workspace $ws5
bindsym $mod2+Shift+1 move container to workspace number $ws6 ; workspace $ws6
bindsym $mod2+Shift+2 move container to workspace number $ws7 ; workspace $ws7
bindsym $mod2+Shift+3 move container to workspace number $ws8 ; workspace $ws8
bindsym $mod2+Shift+4 move container to workspace number $ws9 ; workspace $ws9
bindsym $mod2+Shift+5 move container to workspace number $ws10 ; workspace $ws10
bindsym $mod2+Shift+6 move container to workspace number $ws16 ; workspace $ws16
bindsym $mod+Shift+6 move container to workspace number $ws11 ; workspace $ws11
bindsym $mod+Shift+7 move container to workspace number $ws12 ; workspace $ws12
bindsym $mod+Shift+8 move container to workspace number $ws13 ; workspace $ws13; layout tabbed
bindsym $mod+Shift+9 move container to workspace number $ws14 ; workspace $ws14
bindsym $mod+Shift+0 move container to workspace number $ws15 ; workspace $ws15

#window Resize
bindsym $mod2+Left    resize grow width 10 px or 10 ppt
bindsym $mod2+Right   resize shrink width 10 px or 10 ppt
bindsym $mod2+Up      resize grow height 10 px or 10 ppt
bindsym $mod2+Down    resize shrink height 10 px or 10 ppt

#Assigning workspaces to screens
workspace $ws1 output primary
workspace $ws2 output primary
workspace $ws3 output primary
workspace $ws4 output primary
workspace $ws5 output primary

workspace $ws11 output eDP1
workspace $ws12 output eDP1
workspace $ws13 output eDP1
workspace $ws14 output eDP1
workspace $ws16 output eDP1

#Workspace rules
for_window [class="firefox"] move to workspace $ws1

# reload the configuration file
bindsym $mod+Ctrl+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -f hack -t warning -m 'Do you really want to exit i3?' -B 'Yes, exit i3' 'i3-msg exit'"

#Window Colors:
set $fg1         #ffffff
set $bd2         #2F3D44
set $bd1	 #222D32
set $hoi 	 #00BCD4
set $indc 	 #4c7899
set $text	 #2d2d2d
set $urg         #FF5252


bar {
 		position top
        status_command i3blocks -c ~/.config/i3blocks/i3blocks.conf
        tray_padding 0
        tray_output none
        workspace_min_width 60
        height 28
        colors{
                background           $bd1
                separator            $fg1
                statusline           $fg1


        		focused_workspace  $text   $hoi    $text
        		active_workspace   $bd1	   $bd2	   $fg1
        		inactive_workspace #333333 $bd2 #888888
                        urgent_workspace   $indc   $urg    $fg1
        }
}

# class                 border  backgr. text    indicator child_border
client.focused          $hoi 	$hoi	$fg1 	$indc 	  $hoi
client.focused_inactive $bd2	$bd1	$fg1	$indc  	  $bd1
client.unfocused        $bd2	$bd1	$fg1	$indc  	  $bd1


#AutoStart
exec picom -f --config /home/mivin/.config/picom/picom.conf


#My Shortcuts
bindsym $mod+z          exec flameshot gui
bindsym $mod+x          exec termite
bindsym $mod+Ctrl+x     exec /home/mivin/dotfiles/rofi/scripts/tmux.sh
bindsym $mod+e          exec thunar
bindsym $mod+c          workspace $ws2; exec subl
bindsym $mod+b         	workspace $ws1; exec firefox
 

#Screen Lock
bindsym $mod+Ctrl+l exec dm-tool lock




